<header style="display: flex; flex-direction: column; align-items: center;">
    <div class="today-facts">
        <h2 style="text-transform: capitalize;">{{today.weekday}} {{today.day}} {{today.month.name}}
            <span class="weeknumber">vecka {{today.week}}</span>
        </h2>
        <p>
          {{#if today.helgdag}}Helgdag: {{today.helgdag}}{{/if}} {{#if today.helgdagsafton}}Helgdag: {{today.helgdagsafton}}{{/if}} {{#if today.redDay}}(röd dag){{/if}}
        </p>
        {{#if today.namnsdag}}
            <p class="sans-serif">
                {{#each today.namnsdag}}
                    <span>{{this}}</span>{{#unless @last}} &amp; {{/unless}}
                {{/each}}
                har namnsdag
            </p>
        {{/if}}

        {{#if today.themeDays}}
            <div class="todays-themedays sans-serif">
                <strong>Temadagar:</strong>
                <ul>
                  {{#each today.themeDays}}
                      <li>{{this}}</li>
                  {{/each}}
                </ul>
            </div>
        {{/if}}
    </div>
    <nav class="menu-bar" style="height:30px;">
      <a style="" class="button" href="{{prevQueryString}}">Tidigare</a>
      <a style="" class="button" href="{{nextQueryString}}">Nästa år</a>
    </nav>
</header>


{{!-- Desktop and Mobile --}}
{{#each currentYear.months}}
  {{#ifnoteq this.isInThePast true}}
    <div class="calendar calendar-grid {{#ifeq this.isCurrentMonth true}}is-current-month{{/ifeq}}">
      <h1 class="month">
        {{this.name}}
      </h1>

      <ol class="day-names">
          <li>Mån</li>
          <li>Tis</li>
          <li>Ons</li>
          <li>Tor</li>
          <li>Fre</li>
          <li class="weekend">Lör</li>
          <li class="weekend">Sön</li>
      </ol>

      <section class="weekNumbers">
        {{#each this.weekNumbers}}
          <div>v{{this}}</div>
        {{/each}}
      </section>

      <ol class="days">
        {{#each this.days}}
          {{#ifeq this.isBlank true}}
            <li class="not-this-month">
            </li>
          {{/ifeq}}
          {{#ifnoteq this.isBlank true }}
              <li class = "
                  {{#ifeq this.isInThePast true}}not-this-month{{/ifeq}}
                  {{#if isToday}}isToday{{/if}}
                  {{#if redDay}}redDay{{/if}}
                  {{#if helgDag}}helgDag{{/if}}
                  {{#ifeq veckodag 'Lördag'}}weekend{{/ifeq}} {{#ifeq veckodag 'Söndag'}}weekend{{/ifeq}}">
                  <div class="date">
                    {{dayNumber}}
                  </div>
                  <div class="holiday">
                    {{helgdag}}
                    {{helgdagsafton}}
                  </div>
                  <div class="namedays">
                    {{#each namnsdag}}
                        <span>{{this}}</span>{{#unless @last}} &amp; {{/unless}}
                    {{/each}}
                  </div>
                  <div class="themedays">
                    {{#each themeDays}}
                        <p>{{this}}</p>
                    {{/each}}
                  </div>
              </li>
          {{/ifnoteq}}
        {{/each}}
        <li>
      </ol>
    </div>
  {{/ifnoteq}}
{{/each}}

{{!-- Mobile only --}}
<div class="calendar calendar-list">
  {{#each currentYear.months}}
    <div class="mobile-month {{#ifeq this.isInThePast true}}not-this-month{{/ifeq}}">
      <h2>{{this.name}} - detaljer</h2>
      <ol class="days">
        {{#each this.days}}
          {{#ifnoteq this.isBlank true }}
            <li class = "{{#if isToday}}isToday{{/if}}
                {{#if redDay}}redDay{{/if}}
                {{#if helgDag}}helgDag{{/if}}
                {{#ifeq veckodag 'Lördag'}}weekend{{/ifeq}} {{#ifeq veckodag 'Söndag'}}weekend{{/ifeq}}">
                <div class="date">
                  {{dayNumber}} {{#ifnoteq this.name ../today.month.name}}{{month.name}}{{/ifnoteq}}
                  <span>{{veckodag}}</span>
                </div>
                <div class="holiday">
                {{helgdag}}
                {{helgdagsafton}}
                </div>
                <div class="namedays">
                {{#each namnsdag}}
                    <span>{{this}}</span>{{#unless @last}} &amp; {{/unless}}
                {{/each}}
                </div>
                <div class="themedays">
                    {{#each themeDays}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            </li>
          {{/ifnoteq}}
        {{/each}}
      </ol>
    </div>
  {{/each}}
</div>

<div class="menu-bar" style="display: flex; justify-content: center; margin: 10px 0;">
  <a style="" class="button" href="{{nextQueryString}}">Nästa år</a>
</div>